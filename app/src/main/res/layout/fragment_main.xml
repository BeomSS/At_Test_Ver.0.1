            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="글"
                android:textSize="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/Textbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:text=">"
                app:layout_constraintLeft_toRightOf="@id/Text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="제목 : "
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/Text2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Text1.1"
                app:layout_constraintTop_toBottomOf="@id/Text" />

            <TextView
                android:id="@+id/Text1.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaa"
                android:textSize="20dp"
                app:layout_constraintLeft_toRightOf="@id/Text1"
                app:layout_constraintTop_toBottomOf="@id/Text" />

            <TextView
                android:id="@+id/Text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="작성자 : "
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/text4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/Text2.1"
                app:layout_constraintTop_toBottomOf="@id/Text1" />

            <TextView
                android:id="@+id/Text2.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bbb"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/text4"
                app:layout_constraintLeft_toRightOf="@id/Text2"
                app:layout_constraintTop_toBottomOf="@id/Text1" />

            <TextView
                android:id="@+id/Text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천수 : "
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/text4"
                app:layout_constraintRight_toLeftOf="@id/Text3.1"
                app:layout_constraintTop_toBottomOf="@id/Text1.1" />

            <TextView
                android:id="@+id/Text3.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="ccc"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/text4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Text1" />


            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Text2"
                android:fillViewport="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="260dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Text2"
